<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.snyper.keeva.MainActivity">

     <LinearLayout

         android:orientation="vertical"
         android:layout_centerInParent="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">



         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
           android:layout_marginLeft="50dp"
             android:textSize="90sp"
             android:textColor="@color/txtcolorOne"
             android:text="Keeva"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:textSize="18sp"
             android:id="@+id/txtSlogan"
             android:textColor="@color/txtcolortwo"
             android:text="Decide, Order and enjoy your meal where ever you are "/>


     </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <info.hoang8f.widget.FButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_continue"
           android:layout_marginStart="85dp"
            android:layout_marginBottom="10dp"
            android:text="Get started"
            android:textColor="#fffefe"
            app:fButtonColor="@color/btnSignUp"
            app:cornerRadius="30dp"/>


    </LinearLayout>
</RelativeLayout>
